@model IEnumerable<ass2.Models.ActivityCategory>

@{
    ViewData["Title"] = "Index";
}

<h2>Categories</h2>
@if (User.IsInRole("Admin"))
{
<p>
    <a asp-action="Create">Create New</a>
</p>
}
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ActivityDescription)
                </th>
@if (User.IsInRole("Admin"))
{
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
}
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityDescription)
            </td>
@if (User.IsInRole("Admin"))
{
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ActivityCategoryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ActivityCategoryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ActivityCategoryId">Delete</a>
            </td>
}
        </tr>
}
    </tbody>
</table>
